<% layout("./layouts/layout.eta") %>

<h1><a href="/"Main Page</h1>

<form method="POST">
  Name: <input type="text" name="name" />
  <input type="submit" value="Add List" />
</form>

<h2>Active Lists:</h2>

<ul>
<% it.lists.forEach((list) => { %>
  <li>
    <a href="/lists/<%= list.id %>"><%= list.name %></a>
  </li>
<% }); %>
</ul>